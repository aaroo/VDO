# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       					Application.index

GET		/application/makenewvid										Application.index
GET		/application/makenewuser									Application.index
GET		/application/myvideos										Application.myvideos
GET		/application/editvideo										Application.editvideo
GET		/application/edituser										Application.edituser
GET		/application/users											Application.users

# Authentication Service
GET		/authenticationservice/login								AuthenticationService.login
GET		/authenticationservice/signup								AuthenticationService.signUp
GET		/authenticationservice/signOut								AuthenticationService.signOut
GET		/authenticationservice/openyoutubeapi						AuthenticationService.openYouTubeAPI
GET		/authenticationservice/getcurrentuserinfo					AuthenticationService.getCurrentUserInfo

# UserIntegration Service
GET		/userintegrationservice/searchuser/							UserIntegrationService.searchUser
GET		/userintegrationservice/getuserinfo							UserIntegrationService.getUserInfo
GET		/userintegrationservice/deleteuser							UserIntegrationService.deleteUser
GET		/userintegrationservice/edituser/							UserIntegrationService.editUser
GET		/userintegrationservice/getallusers							UserIntegrationService.getAllUsers

# VideoIntegration Service
GET		/videointegrationservice/getvideos							VideoIntegrationService.getVideos
GET		/videointegrationservice/deletevideo						VideoIntegrationService.deleteVideo
GET		/videointegrationservice/addvideo							VideoIntegrationService.addVideo
GET		/videointegrationservice/updatevideo						VideoIntegrationService.updateVideo
GET		/videointegrationservice/searchvideos						VideoIntegrationService.searchVideos
GET		/videointegrationservice/getvideoinfo						VideoIntegrationService.getVideoInfo
GET		/videointegrationservice/likevideo							VideoIntegrationService.likeVideo
GET		/videointegrationservice/viewvideo							VideoIntegrationService.viewVideo

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
